<Window x:Class="TWICDBAggregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
        Title="TWIC DB Aggregator"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/AppIcon.ico"
        Height="700"
        Width="700"
        MinWidth="680"
        MinHeight="660"
        ResizeMode="CanResize"
        WindowStyle="None"
        Background="{DynamicResource AppBackgroundBrush}">
    <Window.Resources>
        <Thickness x:Key="ChromeButtonPadding">10,6</Thickness>
    </Window.Resources>

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            ResizeBorderThickness="8" />
    </shell:WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource ControlBorderBrush}"
            BorderThickness="1"
            Background="{DynamicResource AppBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Custom title bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="TWIC DB Aggregator"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <Button Grid.Column="1"
                            Content="–"
                            Padding="14,10"
                            MinWidth="40"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize" />
                    <Button Grid.Column="2"
                            Content="×"
                            Padding="14,10"
                            MinWidth="40"
                            Margin="8,0,0,0"
                            Click="CloseButton_Click"
                            ToolTip="Close" />
                </Grid>
            </Border>

            <StackPanel Grid.Row="1"
                        Margin="16,12,16,8">
                <StackPanel.Resources>
                    <Style TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="0,0,0,8" />
                    </Style>
                </StackPanel.Resources>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Start Date" />
                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Content="End Date" />

                    <Calendar Grid.Row="1"
                              Grid.Column="0"
                              Name="calendarStart"
                              SelectionMode="SingleDate"
                              SelectedDatesChanged="calendarStart_SelectedDatesChanged" />
                    <Calendar Grid.Row="1"
                              Grid.Column="1"
                              Name="calendarEnd"
                              SelectionMode="SingleDate"
                              SelectedDatesChanged="calendarEnd_SelectedDatesChanged" />
                </Grid>

                <Separator Margin="0,0,0,4"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0"
                           VerticalAlignment="Center"
                           Content="Output file" />
                    <TextBox Grid.Column="1"
                             Name="textBoxFileName"
                             Margin="8,0"
                             VerticalAlignment="Center"
                             TextChanged="textBoxFileName_TextChanged" />
                    <Button Grid.Column="2"
                            Name="buttonFileChooser"
                            Content="Browse..."
                            Padding="14,10"
                            MinWidth="110"
                            Click="buttonFileChooser_Click" />
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Vertical">
                        <Label Content="Mode" />
                        <RadioButton Name="rbCreateNew"
                                     Content="Create New"
                                     IsChecked="True"
                                     GroupName="Overwrite" />
                        <RadioButton Name="rbAppend"
                                     Content="Append"
                                     GroupName="Overwrite" />
                        <CheckBox Name="stopOnSkip"
                                  Content="Stop if a TWIC issue is missing" />
                    </StackPanel>

                    <Button Grid.Column="1"
                            Name="buttonBuild"
                            Content="Build DB"
                            Padding="14,10"
                            MinWidth="140"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Click="buttonBuild_Click" />
                </Grid>
            </StackPanel>

            <Grid Grid.Row="2"
                  Margin="16,0,16,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Content="Log" />
                <ListBox Grid.Row="1"
                         Name="status"
                         ItemsSource="{Binding}"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Focusable" Value="False" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Copy Selected" Click="CopyLogEntry_Click" />
                            <MenuItem Header="Copy All" Click="CopyAllLog_Click" />
                            <MenuItem Header="Clear Log" Click="ClearLog_Click" />
                        </ContextMenu>
                    </ListBox.ContextMenu>
                </ListBox>
            </Grid>

            <StatusBar Grid.Row="3"
                       Name="footerStatus">
                <StatusBarItem>
                    <TextBlock Text="TWIC DB Aggregator" />
                </StatusBarItem>
                <StatusBarItem DockPanel.Dock="Right" HorizontalContentAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Added:" />
                        <TextBlock Name="statusAdded" Margin="6,0,0,0" />
                        <TextBlock Text="of" Margin="6,0,0,0" />
                        <TextBlock Name="statusTotal" Margin="6,0,0,0" />
                        <TextBlock Text="Skipped:" Margin="14,0,0,0" />
                        <TextBlock Name="statusSkipped" Margin="6,0,0,0" />
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Border>
</Window>
